<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>System - Jomsocial Redirect</name>
    <author>JomSocial Team</author>
    <creationDate>Aug 11 2011</creationDate>
    <copyright>Copyright 2008 - 2010 by Slashes &amp; Dots Sdn Bhd. All rights reserved</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>support@jomsocial.com</authorEmail>
    <authorUrl>http://jomsocial.com</authorUrl>
    <version>4.5.9</version>
    <description></description>
    <files>
        <file plugin="jomsocialredirect">jomsocialredirect.php</file>
    </files>
    <languages>
        <language tag="en-GB">en-GB.plg_system_jomsocialredirect.ini</language>
    </languages>    	
    <config>
        <fields name="params" >
            <fieldset name="basic">
                <field name="override_com_user_registration" type="radio" default="1" label="PLG_JOMSOCIALREDIRECT_OVERRIDE_LABEL" description="PLG_JOMSOCIALREDIRECT_OVERRIDE_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="redirect_previous" type="radio" default="0" label="PLG_JOMSOCIALREDIRECT_REDIRECT_PREV_LABEL" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="redirect_login" type="menuitem" default="1" label="PLG_JOMSOCIALREDIRECT_REDIRECT_LOGIN_LABEL" description="" />
                <field name="redirect_login_message_show" type="radio" default="1" label="PLG_JOMSOCIALREDIRECT_REDIRECT_LOGIN_MESSAGE_SHOW_LABEL" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="redirect_login_msg" type="text" default="LOGIN_SUCCESSFUL" label="PLG_JOMSOCIALREDIRECT_REDIRECT_LOGIN_MESSAGE_LABEL" description="PLG_JOMSOCIALREDIRECT_REDIRECT_LOGIN_MESSAGE_DESC" size="30" />
                <field name="redirect_login_failed" type="menuitem" default="1" label="PLG_JOMSOCIALREDIRECT_REDIRECT_LOGIN_FAIL_LABEL" description="" />
                <field name="redirect_login_failed_message_show" type="radio" default="1" label="PLG_JOMSOCIALREDIRECT_LOGOUT_FAIL_MESSAGE_SHOW_LABEL" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="redirect_login_failed_msg" type="text" default="LOGIN_FAILED" label="PLG_JOMSOCIALREDIRECT_REDIRECT_LOGIN_FAIL_MESSAGE_LABEL" description="PLG_JOMSOCIALREDIRECT_REDIRECT_LOGIN_FAIL_MESSAGE_DESC" size="30" />
                <field name="redirect_logout" type="menuitem" default="1" label="PLG_JOMSOCIALREDIRECT_REDIRECT_LOGOUT_LABEL" description="" />
                <field name="redirect_register_message_show" type="radio" default="1" label="PLG_JOMSOCIALREDIRECT_REDIRECT_MESSAGE_SHOW_LABEL" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="redirect_registration_msg" type="text" default="REDIRECTED_TO_COMMUNITY_REGISTRATION" label="PLG_JOMSOCIALREDIRECT_REDIRECT_REGISTER_LABEL" description="PLG_JOMSOCIALREDIRECT_REDIRECT_REGISTER_DESC" size="30" />
            </fieldset>
        </fields>
    </config>
</extension>